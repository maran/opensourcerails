!!! Strict
%html{html_attrs}
  %head
    %meta{"http-equiv" => "Content-type", "content" => "text/html; charset=utf-8"}
    %meta{"name" => "verify-v1", "content" => "d+DllK/PGpBSGDJ5JBpJ+GnMLDZWBO091jbybQ0umHM="}
    = title :site => AppConfig.site_name
    = meta_tags
    
    = stylesheets
    <!--[if lt IE 8]>
    <script src="http://ie7-js.googlecode.com/svn/version/2.0(beta3)/IE8.js" type="text/javascript"></script>
    <![endif]-->
    = javascripts

    = yield :head
        
    = auto_discovery_link_tag(:atom, AppConfig.rss_url || formatted_projects_url(:atom), :title => "Latest Projects")
    
  %body
    .site_notice              
      = link_to 'Welcome to the DStillery, read all about the opening on our blog.', 'http://weblog.brightlight-ict.nl/2008/08/the-dstillery-is-open/'
    .body-main
      .page-content
        = partial "layouts/header"
        = flash_boxes
        = yield
        = clear
    .body-bottom
      .page-content
        = partial "layouts/footer"
        
    - if production?
      = partial "layouts/tracking"
    