- if local_assigns[:project]  
  .links
    %ul
      %li= link_to_image("comments-mini.png", project_comments_url(project),{:alt => "Comments for homebrew: #{project.title}" }, :title => pluralize(project.comments.size, "comment"))
      %li= bookmark_mini(project)
      - unless project.download_url.blank?
        %li= link_to_image("download-mini.png", download_project_url(project), {:alt => "Download latest homebrew release for #{project.title}"},:title => "Download Latest Homebrew Version")
      
      
      