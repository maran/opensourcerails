- build_form_for [@project, Screenshot.new], :html => {:multipart => true} do |f|
  %div.field.file_field
    = link_to_image "add-sm.png", "#", :class => "add-screenshot-field right"
    = f.label "Upload Screenshots"
    = f.label "Be sure to upload 256x384 or the image will be streched"
    = file_field_tag "screenshots[][screenshot]", :size => "25"
    
  .actions
    = f.submit "Upload"
    or 
    = link_to "cancel", "#", :class => "switch-to-first"
    = progress
  
  = br